// ============================================================
// ‚úÖ PRISMA SCHEMA (Render + Neon + Cloudinary Compatible)
// ============================================================

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"] // ensures Render compatibility
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================
// üß© MODELS
// ============================================================

model User {
  id                Int       @id @default(autoincrement())
  email             String    @unique
  passwordHash      String
  name              String?
  isVerified        Boolean   @default(false)
  verificationToken String?
  verificationExp   DateTime?
  role              Role      @default(USER)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // üîë For password reset
  resetToken        String?
  resetTokenExpiry  DateTime?

  // üîó Relations
  entries           Entry[]   @relation("UserEntries")
}

// ============================================================
// üé¨ ENTRIES MODEL
// ============================================================

model Entry {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation("UserEntries", fields: [userId], references: [id], onDelete: Cascade)

  title       String
  type        EntryType
  director    String?
  budget      String?
  location    String?
  durationMin String?
  year        Int?
  details     String?
  posterPath  String?   // ‚úÖ Cloudinary URL stored here
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// ============================================================
// ‚öôÔ∏è ENUMS
// ============================================================

enum Role {
  USER
  ADMIN
}

enum EntryType {
  MOVIE
  TV_SHOW
  WEB_SERIES
  SHORT_FILM
  DOCUMENTARY
}
